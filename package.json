{
  "name": "template_node-ts",
  "version": "1.0.0",
  "description": "Template for Node Project w/ TypeScript, ESLint, Prettier & Vitest",
  "main": "./dist/index.js",
  "type": "module",
  "author": "Piotr Szponder",
  "license": "ISC",
  "keywords": [
    "node",
    "typescript",
    "ts",
    "vitest",
    "testing",
    "template",
    "eslint",
    "prettier"
  ],
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vitest": "^0.0.29",
    "happy-dom": "^8.9.0",
    "prettier": "^2.8.4",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm clean && tsup --sourcemap",
    "build-prod": "pnpm clean && tsup --minify --dts",
    "start": "tsup --sourcemap --onSuccess \"node dist/index.js\"",
    "watch": "tsup --sourcemap --watch --onSuccess \"node dist/index.js\"",
    "test": "vitest --run",
    "test-related": "vitest --run related",
    "test-watch": "vitest",
    "check-format": "prettier --config .prettierrc 'src/**/*' --check",
    "check-lint": "eslint 'src/**/*' --ext ts --ext tsx --ext js --ext jsx",
    "check-types": "tsc --pretty --noEmit",
    "check-all": "pnpm check-format && pnpm check-lint && pnpm check-types",
    "fix-format": "prettier --config .prettierrc 'src/**/*' --write",
    "fix-lint": "eslint --fix 'src/**/*'",
    "fix-all": "pnpm fix-format && pnpm fix-lint && pnpm build",
    "scratch": "pnpm clean && tsup src/_scratch/scratch.ts --onSuccess \"node dist/scratch.js\""
  }
}
